<div class="wrapper">
  <%= render 'layouts/navigation' %>

  <div class="main">
    <div class="container">
      <div class="page-title">
        <h1> <a href="/products" class="back-towork"><i class="fa fa-angle-left"></i></a><%= @product.name %></h1>
      </div>
    </div>


        <div class="container work-container">
          <div id="work-carousel" class="work-carousel carousel slide" data-ride="carousel" data-interval="0">
            <!-- Wrapper for slides -->
            <div class="carousel-inner">
              <div class="item active">
                  <%= image_tag @product.photo.url %>
              </div>
            </div>
          </div>
        </div>
        <div class="container work-container title-row">
          <h2><%= @product.name %> <small><%= @product.size %></small></h2>
        </div>


    <div class="container work-container">
      <div class="row">
        <div class="col-sm-6">
          <p class="text-justify">
            <strong class="text-loud p-right">DESCRIPTION</strong> <%= @product.description %>
          </p>
        </div>
        <div class="col-sm-6">
          <p class="text-justify">
            <strong class="text-loud p-right">PRICE $</strong> <%= @product.price %>
          </p>
        </div>
      </div>
    </div>
  </div>


  <div class="push"></div>
</div>
