<div class="wrapper">
  <%= render 'layouts/navigation' %>

  <!-- Parallax
  ================================================== -->
  <div id="homeContent" class="parallax-slides">
    <div id="preload">
      <%= image_tag( "gf_hp1.jpg", :alt=>"Shutup Relax" ) %>
      <%= image_tag( "gf_hp2.jpg", :alt=>"Shutup Relax" ) %>
      <%= image_tag( "gf_hp3.jpg", :alt=>"Shutup Relax" ) %>
    </div>
    <section id="slide-001" class="slide-001 slide skrollr-body">
      <div class="bg" data-center="background-position: 50% 0px;" data-top-bottom="background-position: 50% 100px;" data-anchor-target="#slide-001">
        <div class="slide-container container" data-top="background-color: rgba(0,0,0,0)" data-center="background-color: rgba(0,0,0,.2)" data-bottom="background-color: rgba(0,0,0,0)">
          <div id="textFade1" class="caption textFade1" data-center="bottom: 200px; opacity: 1" data-top="bottom: 1200px; opacity: 0">
            <h3 class="string string-4">Shutup... And Just Relax.</h3>
          </div>
        </div>
      </div>
      <div class="slide-divider hidden-xs">

      </div>
    </section>
    <section id="slide-002" class="slide-002 slide skrollr-body">
      <div class="bg" data-center="background-position: 50% 0px;" data-top-bottom="background-position: 45% 100px;" data-anchor-target="#slide-002">
        <div class="slide-container container" data-top="background-color: rgba(0,0,0,0)" data-center="background-color: rgba(0,0,0,.2)" data-bottom="background-color: rgba(0,0,0,0)">
          <div id="textFade2" class="caption textFade2" data-center="bottom: 200px; opacity: 1" data-top="bottom: 1200px; opacity: 0">
              <span class="string string-1">Sarah has been a holistic healer and massage therapist for 6 years. She has a long history of working in healthcare as well as the natural healing arts.</span>
          </div>
        </div>
      </div>
      <div class="slide-divider hidden-xs">

      </div>
    </section>
    <section id="slide-003" class="slide-003 slide skrollr-body">
      <div class="bg" data-center="background-position: 50% 100px;" data-bottom="background-position: 50% 0px;" data-anchor-target="#slide-003">
        <div class="slide-container container" data-top="background-color: rgba(0,0,0,0)" data-center="background-color: rgba(0,0,0,.2)" data-bottom="background-color: rgba(0,0,0,0)">
          <div id="textFade3" class="caption textFade3" data-center="bottom: 200px;" data-top="bottom: 1200px;">
            <div class="container">
              <h1 class="string">Partners & Friends</h1>
              <% @partners.in_groups_of(3, false).each_with_index do |partner_row, idx| %>
                <% if idx == 0 %>
                  <div class="row m-bottom">
                <% else %>
                  <div class="row">
                <% end %>
                  <% partner_row.each_with_index do |item, index| %>
                      <% if index == 0 %>
                        <%= link_to item.name, item.link, :class=>"m-right" %>
                      <% elsif index == 1 %>
                        <%= link_to item.name, item.link, :class=>"m-left m-right" %>
                      <% else %>
                        <%= link_to item.name, item.link %>
                      <% end %>                 
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
  <div class="push"></div>
</div>

