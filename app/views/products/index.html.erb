<div class="wrapper">

  <%= render 'layouts/navigation' %>

  <div class="main">
    <div class="container">
      <div class="page-title">
        <h1>products</h1>
      </div>
    </div>
    <div class="container work-grid">
      <div class="row">
        <div class="col-lg-12 col-md-11 col-sm-12">
          <% @products.each do |p| %>
          <div class="work-item">
            <a class="work-image" href='<%= product_path(p.id) %>'>
              <span class="btn-arrow"><i class="fa fa-angle-right"></i></span>
              <%= image_tag(p.photo, :alt=>"" ) %>
            </a>
            <div class="workCaption">
              <%= link_to product_path(p) do %>
                <h4><%= p.name %></h4>
              <% end %>
            </div>
          </div> <!-- /.works-item -->
          <% end %>
        </div>
      </div>

    </div><!-- /.works-grid -->
  </div>

  <div class="push"></div>
</div>
